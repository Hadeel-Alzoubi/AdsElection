                                                            @Html.ValidationMessageFor(model => model.listname, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label for="form_email">الدائرة الانتخابية</label>
                                                            @*<input id="form_email" type="text" name="election_area"
                                                                class="form-control" placeholder="أدخل الدائرة الانتخابية"
                                                                required="required" data-error="الدائرة الانتخابية مطلوبة">*@
                                                            @Html.EditorFor(model => model.areaelection, new { htmlAttributes = new { @class = "form-control" } })
                                                            @Html.ValidationMessageFor(model => model.areaelection, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label for="form_email">الوقت</label>
